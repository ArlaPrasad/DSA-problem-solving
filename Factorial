package com.learnig;

public class Factorial {
	 

	    // Recursive method to find the factorial of a number
	    public static int factorial(int n) {
	        if (n == 0) {   // Base case: if n is 0
	            return 1;   // factorial of 0 is 1
	        } else {        // Recursive case
	            return n * factorial(n - 1); // n times factorial of (n-1)
	        }
	    }

	    public static void main(String[] args) {
	        int number = 5; // Example number to find factorial of
	        int result = factorial(number); // Call the factorial method
	        System.out.println("Factorial of " + number + " is: " + result); // Print the result
	    }
	}

